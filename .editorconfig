# editorconfig.org
# Ref: https://editorconfig.org/

# top-most EditorConfig file
root = true

[*]
indent_style = tab
tab_width = 2
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{js, jsx, ts, tsx, mjs, cjs, cts, mts}]
indent_style = tab
tab_width = 2
indent_size = 2

[*.{svelte, vue}]
indent_style = tab
tab_width = 2
indent_size = 2

[*.json]
indent_style = tab
tab_width = 2
indent_size = 2

[*.{css, scss, sass}]
indent_style = tab
tab_width = 2
indent_size = 2
